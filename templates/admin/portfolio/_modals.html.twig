<!-- Modal d'ajout de compétence -->
<div class="modal fade" id="newSkillModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter une compétence</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="{{ path('admin_portfolio_skills_new', {'id': portfolio.id}) }}" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="skillName" class="form-label">Nom de la compétence</label>
                        <input type="text" class="form-control" id="skillName" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="skillLevel" class="form-label">Niveau</label>
                        <select class="form-select" id="skillLevel" name="level" required>
                            <option value="1">Débutant</option>
                            <option value="2">Intermédiaire</option>
                            <option value="3">Avancé</option>
                            <option value="4">Expert</option>
                            <option value="5">Maitre</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                </div>
            </form>
        </div>
    </div>
</div>

