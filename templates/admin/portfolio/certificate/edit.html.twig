{% extends 'admin/layout.html.twig' %}

{% block title %}Modifier le Certificat{% endblock %}

{% block content %}
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="mb-0">
                <i class="fas fa-certificate me-3"></i>Modifier le Certificat
            </h1>
            <p class="mb-0 mt-2 opacity-75">Modifier le certificat "{{ certificate.name }}" du portfolio de {{ portfolio.fullName }}</p>
        </div>
        <div class="btn-group">
            <a href="{{ path('admin_portfolio_show', {'id': portfolio.id}) }}" class="btn btn-light">
                <i class="fas fa-arrow-left me-2"></i>Retour
            </a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Nom du certificat</label>
                <input type="text" class="form-control" id="name" name="name" value="{{ certificate.name }}" required>
            </div>

            <div class="mb-3">
                <label for="issuer" class="form-label">Organisme Ã©metteur</label>
                <input type="text" class="form-control" id="issuer" name="issuer" value="{{ certificate.issuer }}" required>
            </div>

            <div class="mb-3">
                <label for="date" class="form-label">Date d'obtention</label>
                <input type="date" class="form-control" id="date" name="date" value="{{ certificate.date|date('Y-m-d') }}" required>
            </div>

            <div class="mb-3">
                <label for="url" class="form-label">URL du certificat</label>
                <input type="url" class="form-control" id="url" name="url" value="{{ certificate.url }}" placeholder="https://...">
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="{{ path('admin_portfolio_show', {'id': portfolio.id}) }}" class="btn btn-light">
                    <i class="fas fa-times me-2"></i>Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Enregistrer
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %} 