{% extends 'admin/layout.html.twig' %}

{% block title %}Modifier le Lien Social{% endblock %}

{% block content %}
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="mb-0">
                <i class="fas fa-share-alt me-3"></i>Modifier le Lien Social
            </h1>
            <p class="mb-0 mt-2 opacity-75">Modifier le lien social {{ socialLink.platform }} du portfolio de {{ portfolio.fullName }}</p>
        </div>
        <div class="btn-group">
            <a href="{{ path('admin_portfolio_show', {'id': portfolio.id}) }}" class="btn btn-light">
                <i class="fas fa-arrow-left me-2"></i>Retour
            </a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label for="platform" class="form-label">Plateforme</label>
                <select class="form-select" id="platform" name="platform" required>
                    <option value="">SÃ©lectionner une plateforme</option>
                    <option value="LinkedIn" {% if socialLink.platform == 'LinkedIn' %}selected{% endif %}>LinkedIn</option>
                    <option value="GitHub" {% if socialLink.platform == 'GitHub' %}selected{% endif %}>GitHub</option>
                  
                    <option value="Facebook" {% if socialLink.platform == 'Facebook' %}selected{% endif %}>Facebook</option>
                    <option value="Instagram" {% if socialLink.platform == 'Instagram' %}selected{% endif %}>Instagram</option>
                    <option value="YouTube" {% if socialLink.platform == 'YouTube' %}selected{% endif %}>YouTube</option>
                    <option value="Medium" {% if socialLink.platform == 'Medium' %}selected{% endif %}>Medium</option>
                    <option value="Dev.to" {% if socialLink.platform == 'Dev.to' %}selected{% endif %}>Dev.to</option>
                    <option value="Stack Overflow" {% if socialLink.platform == 'Stack Overflow' %}selected{% endif %}>Stack Overflow</option>
                    <option value="Autre" {% if socialLink.platform == 'Autre' %}selected{% endif %}>Autre</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="url" class="form-label">URL du profil</label>
                <input type="url" class="form-control" id="url" name="url" value="{{ socialLink.url }}" placeholder="https://..." required>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="{{ path('admin_portfolio_show', {'id': portfolio.id}) }}" class="btn btn-light">
                    <i class="fas fa-times me-2"></i>Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Enregistrer
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %} 